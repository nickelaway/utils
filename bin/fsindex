#!/bin/bash

[ -z "$*" ] && echo Usage: $0 [directory] && exit 1

cd "$1" || exit 1

function hashFile {
	fullFilename="$*"
	if [[ ${fullFilename^^} == *NEF.GZ ]]; then
		hash=$(zcat "$*" | md5sum - | cut -d ' ' -f 1)
		nefFilename=${fullFilename:0:${#fullFilename} - 3}
		echo "${hash}  ${nefFilename}"
	fi
	md5sum "$fullFilename"
}

export -f hashFile

find . -type f -exec bash -c 'hashFile "$0"' {} \;
